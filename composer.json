{
    "name": "frame-php/application",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP application and all dependencies",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
        "maximebf/debugbar": "^1.15",
        "fzaninotto/faker": "^1.7"
    },
    "require": {
        "frame-php/module-sys": "dev-master",
        "frame-php/module-app": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "FramePHP\\": "vendor/frame-php/framework/src/"
        },
        "files": [ "sys/autoload.php" ]
    },
    "scripts": {
        "postUpdateCmd": [
            "@php \"is_dir('sys')\" || cp -r ./vendor/frame-php/module-sys ./sys/",
            "@php \"is_dir('app')\" || cp -r ./vendor/frame-php/module-app ./app/"
        ],
        "post-install-cmd": ["@postUpdateCmd"],
        "post-update-cmd": ["@postUpdateCmd"]
    },
    "minimum-stability": "dev"
}
