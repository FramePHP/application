{
    "name": "frame-php/application",
    "type": "project",
    "license": "MIT",
    "description": "Main FramePHP application and all dependencies",
    "authors": [
        {
            "name": "Hilkiah Makemo",
            "email": "hilkiah.makemo@skywest.com"
        }
    ],
    "require-dev": {
        "maximebf/debugbar": "^1.15",
        "fzaninotto/faker": "^1.7"
    },
    "require": {
        "frame-php/framework": "dev-master",
        "frame-php/module-sys": "dev-master",
        "frame-php/module-app": "dev-master",
        "phroute/phroute": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "FramePHP\\": "vendor/frame-php/framework/src/"
        },
        "files": [ "sys/autoload.php" ]
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"require_once 'Command.php'; Command::CheckInstallCMD(true);\"", 
            "composer update"
        ],
        "post-install-cmd": [
            "@post-create-project-cmd"
        ],
        "post-update-cmd": [
            "@php -r \"require_once 'Command.php'; Command::CheckInstallCMD();\"", 
            "composer dumpautoload"
        ]
    },
    "minimum-stability": "dev"
}
